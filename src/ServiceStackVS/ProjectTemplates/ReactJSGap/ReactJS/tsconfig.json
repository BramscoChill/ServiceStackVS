{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "module": "system",
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./typings/index.d.ts",
    "./wwwroot/jspm_packages/**/*.d.ts"
  ],
  "exclude": [
    "jspm_packages",
    "node_modules",
    "wwwroot"
  ]
}